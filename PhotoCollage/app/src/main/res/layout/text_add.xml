<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main" >



        <ImageView
            android:id="@+id/textShow"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/md_white_1000"/>





    <HorizontalScrollView
        android:id="@+id/choosecolorHor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@+id/textShow"
        tools:ignore="UselessParent" >

    <LinearLayout
        android:id="@+id/choosecolorlinr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/colorRed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/md_red_500"
            android:paddingBottom="10dp"
            android:onClick="colorchoose"
            android:paddingTop="13dp"/>
        <Button
            android:id="@+id/colorOrange"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/md_orange_500"
            android:paddingBottom="10dp"
            android:onClick="colorchoose"
            android:paddingTop="13dp" />
        <Button
            android:id="@+id/colorYellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/md_yellow_500"
            android:paddingBottom="10dp"
            android:onClick="colorchoose"
            android:paddingTop="13dp" />
        <Button
            android:id="@+id/colorGreen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/md_green_500"
            android:paddingBottom="10dp"
            android:onClick="colorchoose"
            android:paddingTop="13dp" />
        <Button
            android:id="@+id/colorBlue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/md_blue_500"
            android:paddingBottom="10dp"
            android:onClick="colorchoose"
            android:paddingTop="13dp" />
        <Button
            android:id="@+id/colorPurple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/md_purple_500"
            android:paddingBottom="10dp"
            android:onClick="colorchoose"
            android:paddingTop="13dp" />
        <Button
            android:id="@+id/colorBrown"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/md_brown_500"
            android:paddingBottom="10dp"
            android:onClick="colorchoose"
            android:paddingTop="13dp" />
        <Button
            android:id="@+id/colorGray"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/md_grey_500"
            android:paddingBottom="10dp"
            android:onClick="colorchoose"
            android:paddingTop="13dp" />
        <Button
            android:id="@+id/colorBlack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/black"
            android:paddingBottom="10dp"
            android:onClick="colorchoose"
            android:paddingTop="13dp" />
        <Button
            android:id="@+id/palette"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/palette"
            android:paddingBottom="10dp"
            android:onClick="colorchoose"
            android:paddingTop="13dp" />
    </LinearLayout>
</HorizontalScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="false"
        android:layout_below="@+id/choosecolorHor"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="New Text"
                android:textSize="40dp"
                android:id="@+id/textView" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="New Text"
                android:textSize="40dp"
                android:id="@+id/textView2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="New Text"
                android:textSize="40dp"
                android:id="@+id/textView3" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="New Text"
                android:textSize="40dp"
                android:id="@+id/textViews4" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="New Text"
                android:textSize="40dp"
                android:id="@+id/textViews5" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="New Text"
                android:textSize="40dp"
                android:id="@+id/textViews6" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="New Text"
                android:textSize="40dp"
                android:id="@+id/textViews7" />



        </LinearLayout>


    </ScrollView>




</RelativeLayout>